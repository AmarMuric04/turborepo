{
  "extends": "typescript-config/base.json",
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "types": ["vite/client", "vitest/globals", "vitest/importMeta", "node"],
    "typeRoots": ["./types", "./node_modules/@types", "./node_modules"],
    "outDir": "dist",
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "components/*": ["./src/components/*"]
    },
    "module": "esnext",
    "target": "esnext",
    "jsx": "react-jsx",
    "tsBuildInfoFile": "./dist/ts-build-info.tsbuildinfo",
    "strictNullChecks": true
  }
}
